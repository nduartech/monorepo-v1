---
import { ViewTransitions } from "astro:transitions";
---
<style>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;
</style>
<script>
  import { navigate } from "astro:transitions/client";

  document.addEventListener("astro:page-load", () => {
    if (window.location.pathname === "/") {
      document.querySelectorAll(".softwareEng")[0].addEventListener("click", () => {
        navigate("/software-engineer");
      }, { once: true });
    }
  });
</script>
<div class="w-screen h-screen flex">
  <div
    class="w-full h-screen bg-[url('/landing.svg')] dark:bg-[url('/landing-dark.svg')] bg-cover bg-right-bottom min-h-screen flex flex-row justify-center items-start">
    <div class="flex flex-col lg:flex-row justify-center items-center mt-16 md:mt-24 lg:mt-36">
      <div class="w-full">
        <div class="flex flex-row justify-center items-center lg:flex-col w-full space-x-5 my-5 lg:space-x-0 lg:space-y-0">
          <div class="image-container w-2/12 min-w-36 max-w-48 h-2/12 flex justify-center items-center">
            <img class="rounded-full object-fill p-3" src="/me.png" alt="Nathan" />
          </div>
          <p class="text-3xl text-regal-blue-400 dark:text-slate-100 my-2">Hi. I'm Nathan.</p>
        </div>
      </div>
      <div class="w-4/5 lg:w-full">
        <div class="space-y-2.5">
          <button type="button"
                  class="softwareEng bg-regal-blue-400 hover:bg-regal-blue-500 dark:bg-regal-blue-900 dark:hover:bg-regal-blue-950 w-full py-2 px-2 text-sm font-medium text-white border border-transparent rounded-lg focus:outline-none">
            Full Stack Software Engineer
          </button>
          <button
            class="bg-regal-blue-400 hover:bg-regal-blue-500 dark:bg-regal-blue-900 dark:hover:bg-regal-blue-950 w-full py-2 px-2 text-sm font-medium text-white border border-transparent rounded-lg focus:outline-none">
            Proliferate Reader
          </button>
          <button
            class="bg-regal-blue-400 hover:bg-regal-blue-500 dark:bg-regal-blue-900 dark:hover:bg-regal-blue-950 w-full py-2 px-2 text-sm font-medium text-white border border-transparent rounded-lg focus:outline-none">
            Proud Husband and Father
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
