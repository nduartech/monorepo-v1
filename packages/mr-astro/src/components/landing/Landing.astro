---
import { Image } from "astro:assets";
import DayNightToggle  from '../common/DayNightToggle.astro'
import me from '../../../public/me.png';
---
<style>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;
</style>
<script>
  import { navigate } from "astro:transitions/client";
  const seListener = () => {
    setTimeout(function(){
    navigate("/software-engineer");
    }, 300);
  };
  let seButton:any = null;
  document.addEventListener("astro:page-load", () => {
    if (window.location.pathname === "/") {
      seButton = document.querySelector(".softwareEng");
      if(seButton!==null) {
        seButton.addEventListener("click", seListener);
      }
    }
  });
  document.addEventListener("astro:before-swap", ()=>{
    if (window.location.pathname === "/") {
      if(seButton) {
        seButton.removeEventListener("click", seListener);
      }
    }
  });
</script>
<div
  class="w-full h-full flex flex-col justify-center items-center">
  <div class="flex flex-col justify-start md:mt-20 lg:mt-24 sm:portrait:h-screen sm:landscape:h-fit md:landscape:h-screen w-full lg:space-y-10 items-center">
    <div class="w-full px-5 flex flex-row justify-center items-center" >
      <div class="flex flex-col md:flex-row lg:flex-col w-full justify-center items-center space-x-5 my-5 lg:space-x-0 lg:space-y-2 text-center">
        <div class="image-container w-2/12 min-w-36 max-w-36 h-2/12 flex justify-center items-center">
          <Image class="rounded-full object-fill p-2 shrink" src={me} alt="Nathan" />
        </div>
        <p class="text-3xl md:text-4xl dark:text-regal-blue-100 text-regal-blue-50 my-2 text-center">Hi, I'm Nathan.</p>
      </div>
    </div>
    <div class="w-10/12 flex flex-row justify-center items-center py-5 bg-[rgba(_183,_201,_226,_0.8)] backdrop-filter backdrop-blur rounded-[10px] dark:bg-[rgba(_1,_63,_106,_0.9)]" >
      <div class="space-y-4 lg:space-y-0 lg:space-x-10 w-11/12 flex flex-col lg:flex-row justify-center items-center">
        <button type="button"
                class="softwareEng bg-regal-blue-600
                hover:bg-green-600
                dark:bg-regal-blue-700
                dark:hover:bg-green-700
                w-full py-2 px-2 text-sm font-medium text-regal-blue-50 dark:text-regal-blue-50 border-[none] rounded-[45px] [box-shadow:0px_8px_15px_rgba(0,_0,_0,_0.1)] [transition:all_0.3s_ease_0s] cursor-pointer outline-[none] hover:[box-shadow:0px_4px_7px_rgba(22,_163,_74,_0.4)] hover: hover:-translate-y-[4px] focus:outline-none hover:outline hover:outline-1 hover:outline-offset-1 hover:outline-regal-blue-200">
          Full Stack Software Engineer
        </button>
        <button
          class="bg-regal-blue-600
                hover:bg-orange-600
                dark:bg-regal-blue-700
                dark:hover:bg-orange-700
                w-full py-2 px-2 text-sm font-medium text-regal-blue-50 dark:text-regal-blue-50 border-[none] rounded-[45px] [box-shadow:0px_8px_15px_rgba(0,_0,_0,_0.1)] [transition:all_0.3s_ease_0s] cursor-pointer outline-[none] hover:[box-shadow:0px_4px_7px_rgba(234,_88,_12,_0.4)] hover:-translate-y-[4px] focus:outline-none hover:outline hover:outline-1 hover:outline-offset-1 hover:outline-regal-blue-200">
          Hobbies and Interests
        </button>
        <button
          class="bg-regal-blue-600
                hover:bg-purple-600
                dark:bg-regal-blue-700
                dark:hover:bg-purple-700
                w-full py-2 px-2 text-sm font-medium text-regal-blue-50 dark:text-regal-blue-50 border-[none] rounded-[45px] [box-shadow:0px_8px_15px_rgba(0,_0,_0,_0.1)] [transition:all_0.3s_ease_0s] cursor-pointer outline-[none] hover:[box-shadow:0px_4px_7px_rgba(147,_51,_234,_0.4)] hover:-translate-y-[4px] focus:outline-none hover:outline hover:outline-1 hover:outline-offset-1 hover:outline-regal-blue-200">
          Contact Me
        </button>
      </div>
    </div>
  </div>
  <div class="flex lg:hidden h-[40px] w-full"></div>
</div>
